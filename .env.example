# --- Окружение ---
ENV=development
DEBUG=False

# --- База данных PostgreSQL ---
# Для локального запуска вне докера используйте localhost
# Внутри Docker Compose хост переопределится на 'db'
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sirius_db
DB_USERNAME=your_db_user
DB_PASSWORD=your_secure_db_password

# --- Redis (Кэш и Rate Limiter) ---
# Для локального запуска без пароля: redis://localhost:6379
# С паролем: redis://:your_redis_password@localhost:6379
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# --- Безопасность (Security) ---
# Секретный ключ для подписи сессий и куки (сгенерируйте: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=your_very_long_and_random_secret_key_here
# Разрешенные хосты (через запятую, НЕ используйте '*' в production)
ALLOWED_HOSTS=localhost,127.0.0.1

# --- JWT (API аутентификация) ---
# Секретные ключи для JWT-токенов (сгенерируйте уникальные для каждого)
API_SECRET_KEY=your_api_secret_key_here
API_REFRESH_SECRET_KEY=your_api_refresh_secret_key_here
API_ACCESS_TOKEN_EXPIRE_MINUTES=60
API_REFRESH_TOKEN_EXPIRE_DAYS=7

# --- Почтовый сервер (SMTP) ---
# Настройки для отправки кодов сброса пароля
MAIL_HOST=smtp.yandex.ru
MAIL_PORT=465
MAIL_USERNAME=your_support_email@yandex.ru
MAIL_PASSWORD=your_app_password_here
MAIL_FROM=your_support_email@yandex.ru

# --- Системные настройки ---
# Часовой пояс сервера
TZ=Europe/Moscow
